<div id='platform-events-node' class='slds-grid slds-wrap slds-grid--pull-padded'>
	<!-- MASTHEAD -->
	<h3 class="slds-size--1-of-1 slds-text-heading--medium slds-text-align--center slds-theme--shade slds-m-around--small">Publish and Subscribe to Platform Events Demo</h3>
	<!-- / MASTHEAD -->
	<div class="slds-p-around--small slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--1-of-2 slds-x-small-order--2 slds-small-order--2 slds-medium-order--2 slds-large-order--1">
		<!-- PAGE HEADER -->
		<div class="slds-page-header" role="banner">
			<!-- LAYOUT GRID -->
			<div class="slds-grid">
				<!-- GRID COL -->
				<div class="slds-col">
					<!-- HEADING AREA -->
					<!-- MEDIA OBJECT = FIGURE + BODY -->
					<div class="slds-media">
						<div class="slds-media__figure">
							<svg aria-hidden="true" class="slds-icon slds-icon--large slds-icon-custom-43">
								<use xlink:href="/assets/icons/custom-sprite/svg/symbols.svg#custom43"></use>
							</svg>
						</div>
						<div class="slds-media__body">
							<p class="slds-text-heading--label">Special Handling Events</p>
							<h1 class="slds-text-heading--medium">New Special Handling Event</h1>
						</div>
					</div>
					<!-- / MEDIA OBJECT -->
					<!-- HEADING AREA -->
				</div>
			</div>
			<!-- / LAYOUT GRID -->
		</div>
		<!-- / PAGE HEADER -->
		<!-- PRIMARY CONTENT WRAPPER -->
		<div class="myapp">
			<!-- CREATE NEW CUSTOMER ORDER EVENT -->
			<div aria-labelledby="newpieform">
				<!-- BOXED AREA -->
				<fieldset class="slds-box slds-theme--default">
					<!-- CREATE NEW CUSTOMER ORDER EVENT BOX -->
					<div class="slds-grid">
						<div class="slds-form--stacked slds-col--padded slds-size--1-of-1">
							<div class="slds-form-element slds-is-required">
								<label class="slds-form-element__label" for="accountId">Account Name</label>
								<div class="slds-form-element__control">
									<select name="accountId" id="accountId" class="slds-select" required>
										<option value="001f4000005ZLb7AAG">Edge Communications</option>
										<option value="001f4000005ZLbAAAW">Dickenson plc</option>
										<option value="001f4000005ZLbHAAW">GenePoint</option>
									</select>
								</div>
							</div>
							
							<div class="slds-form-element slds-is-required">
								<label class="slds-form-element__label" for="serialNumber">Source</label>
								<div class="slds-form-element__control">
									<input name="serialNumber" id="serialNumber" class="slds-input" type="text" required/>
								</div>
							</div>
							
							<div class="slds-form-element slds-is-required">
								<label class="slds-form-element__label" for="issueDescription">Reason</label>
								<div class="slds-form-element__control">
									<input name="issueDescription" id="issueDescription" class="slds-input" type="text" required/>
								</div>
							</div>
						</div>
					</div>
					<button class="slds-button slds-button--brand slds-m-top--medium" id="createBtn" type="submit">Publish Event</button>
					<!-- CREATE NEW CUSTOMER ORDER EVENT FORM -->
				</fieldset>
				<!-- / BOXED AREA -->
			</div>
			<!-- / CREATE NEW CUSTOMER ORDER EVENT -->
		</div>
		<!-- / PRIMARY CONTENT WRAPPER -->
	</div>
	<div class="slds-p-around--small slds-size--1-of-1 slds-medium-size--1-of-1 slds-large-size--1-of-2 slds-x-small-order--1 slds-small-order--1 slds-medium-order--1 slds-large-order--2">
		<div class="slds-text-heading--medium slds-page-header">
			<div class="slds-grid">
				<!-- GRID COL -->
				<div class="slds-col">
					<!-- MEDIA OBJECT = FIGURE + BODY -->
					<div class="slds-media">
						<div class="slds-media__figure">
							<svg aria-hidden="true" class="slds-icon slds-icon--large slds-icon-custom-99">
								<use xlink:href="/assets/icons/custom-sprite/svg/symbols.svg#custom99"></use>
							</svg>
						</div>
						<div class="slds-media__body">
							<p class="slds-text-heading--label">Platform Event Live Stream</p>
							<h1 class="slds-text-heading--medium">Watch the stream of Special Handling Events</h1>
						</div>
					</div>
					<!-- / MEDIA OBJECT -->
				</div>
			</div>
		</div> 
		<div id="messages"></div> 
	</div>
</div>


